<div class="page-header">
  <h1>Register</h1>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <form role="form" ng-submit="register()">
      <fieldset>
        <legend>Enter Details</legend>
        <div class="form-group">
          <label for="email">Email address:</label>
          <input type="email" class="form-control" placeholder="Enter email" ng-model="user.email">
        </div>
        <div class="form-group">
          <label for="text">Username:</label>
          <input type="text" class="form-control" placeholder="Enter username" ng-model="user.username">
        </div>
        <div class="form-group">
          <label for="pwd">Email password:</label>
          <input type="password" class="form-control" placeholder="Enter password" ng-model="user.password">
        </div>
        <button type="submit" class="btn btn-default" value="Register">Sign Up</button>
      </fieldset>
    </form>
  </div>
</div>